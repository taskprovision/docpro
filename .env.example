# Document Processing Settings
PROCESSING_THREADS=4
MAX_DOCUMENT_SIZE=50MB
SUPPORTED_FORMATS=pdf,docx,png,jpg,jpeg,tiff

# AI Configuration
LLM_MODEL=llama2:13b
LLM_TEMPERATURE=0.1
CONFIDENCE_THRESHOLD=0.8

# Storage Configuration
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_DOCUMENTS=documents
MINIO_BUCKET_PROCESSED=processed

# Elasticsearch Configuration
ES_HEAP_SIZE=2g
ES_INDEX_DOCUMENTS=documents
ES_INDEX_ALERTS=compliance-alerts

# Notification Settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_ALERTS_TO=compliance@yourcompany.com

# Compliance Settings
COR_VALIDITY_CHECK=true
INVOICE_AMOUNT_THRESHOLD=10000
CONTRACT_RISK_ALERT=true

# OCR Settings
OCR_LANGUAGE=eng+pol
OCR_DPI=300
OCR_PREPROCESSING=true